{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "RAPyDo": {
      "projectType": "application",
      "schematics": {},
      "root": "",
      "sourceRoot": "./",
      "prefix": "app",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:browser",
          "options": {
            "outputPath": "/app/dist",
            "index": "app/rapydo/index.html",
            "main": "app/rapydo/main.ts",
            "polyfills": "polyfills.ts",
            "tsConfig": "tsconfig.app.json",
            "extractCss": true,
            "aot": true,
            "assets": ["./app/rapydo/assets", "./app/custom/assets"],
            "styles": [
              "node_modules/bootstrap/dist/css/bootstrap.min.css",
              "node_modules/ngx-toastr/toastr.css",
              "node_modules/@swimlane/ngx-datatable/themes/bootstrap.scss",
              "node_modules/@swimlane/ngx-datatable/assets/icons.css",
              "node_modules/@fortawesome/fontawesome-free/css/fontawesome.min.css",
              "node_modules/@fortawesome/fontawesome-free/css/brands.min.css",
              "node_modules/@fortawesome/fontawesome-free/css/solid.min.css",
              "./app/rapydo/css/rapydo.css",
              "./app/custom/css/style.css"
            ],
            "scripts": [],
            "allowedCommonJsDependencies": ["file-saver", "rxjs", "exceljs"]
          },
          "configurations": {
            "production": {
              "fileReplacements": [
                {
                  "replace": "app/rapydo/environments/environment.ts",
                  "with": "app/rapydo/environments/environment.prod.ts"
                }
              ],
              "optimization": true,
              "outputHashing": "all",
              "sourceMap": false,
              "extractCss": true,
              "namedChunks": false,
              "aot": true,
              "extractLicenses": true,
              "vendorChunk": true,
              "buildOptimizer": true,
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "2mb",
                  "maximumError": "5mb"
                },
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "6kb",
                  "maximumError": "10kb"
                }
              ]
            }
          }
        },
        "serve": {
          "builder": "ngx-build-plus:dev-server",
          "options": {
            "browserTarget": "RAPyDo:build",
            "extraWebpackConfig": "./cypress/coverage.webpack.js"
          },
          "configurations": {
            "production": {
              "browserTarget": "RAPyDo:build:production"
            }
          }
        },
        "extract-i18n": {
          "builder": "@angular-devkit/build-angular:extract-i18n",
          "options": {
            "browserTarget": "RAPyDo:build"
          }
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "main": "app/rapydo/tests.ts",
            "polyfills": "polyfills.ts",
            "tsConfig": "tsconfig.spec.json",
            "karmaConfig": "karma.conf.js",
            "assets": ["./app/rapydo/assets", "./app/custom/assets"],
            "styles": [
              "node_modules/bootstrap/dist/css/bootstrap.min.css",
              "node_modules/ngx-toastr/toastr.css",
              "node_modules/@fortawesome/fontawesome-free/css/fontawesome.min.css",
              "node_modules/@fortawesome/fontawesome-free/css/brands.min.css",
              "node_modules/@fortawesome/fontawesome-free/css/solid.min.css",
              "./app/rapydo/css/rapydo.css",
              "./app/custom/css/style.css"
            ],
            "scripts": []
          }
        }
      }
    }
  },
  "defaultProject": "RAPyDo"
}
